{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Microsoft.AspNetCore.Authentication.Certificate": "Information",
      "Microsoft.AspNetCore.Authentication.JwtBearer": "Information"
    }
  },
  "ConnectionStrings": {
    "DefaultConnection": "Server=(localdb)\\mssqllocaldb;Database=CertificatedDemoDb;Trusted_Connection=True;MultipleActiveResultSets=true;TrustServerCertificate=true"
  },
  "Jwt": {
    "Key": "YourSuperSecretKeyForJWTTokenGenerationHereWithAtLeast32Characters",
    "Issuer": "CertificatedDemoAPI",
    "Audience": "CertificatedDemoClient",
    "ExpireMinutes": 60
  },
  "CertificateSettings": {
    // SSL/TLS Certificate for HTTPS (generated from OpenSSL)
    "SslCertificate": {
      "Path": "certificates/ssl.pfx",
      "Password": "ServerPass123!",
      "Thumbprint": ""
    },

    // Client Certificate for mTLS (generated from OpenSSL)
    "ClientCertificate": {
      "Required": false,
      "Path": "certificates/client.pfx",
      "Password": "ClientPass123!",
      "Thumbprints": [],
      "AllowedCN": [ "CertificatedDemo Client" ]
    },

    // Document Signing Certificate (generated from OpenSSL)
    "DocumentCertificate": {
      "Enabled": true,
      "Path": "certificates/doc.pfx",
      "Password": "DocPass123!",
      "AllowedPurposes": [ "DocumentSigning", "Email" ]
    },

    // Code Signing Certificate (generated from OpenSSL)
    "CodeCertificate": {
      "Enabled": true,
      "Path": "certificates/code.pfx",
      "Password": "CodePass123!",
      "AllowedPurposes": [ "CodeSigning" ]
    },

    // Root CA (generated from OpenSSL)
    "RootCA": {
      "Path": "certificates/ca.crt",
      "ValidateChain": true
    },

    // Trust Store
    "TrustedCertificates": {
      "Paths": [ "certificates/ca.crt" ],
      "StoreLocation": "CurrentUser"
    }
  },
  "DemoEndpoints": {
    "RequireClientCertificate": false,
    "AllowSelfSigned": true,
    "DocumentSigningEndpoint": "/api/certificates/documents/sign",
    "CodeSigningEndpoint": "/api/certificates/code/sign",
    "mTLSEndpoint": "/api/certificates/test/mtls"
  },
  "AllowedHosts": "*"
}